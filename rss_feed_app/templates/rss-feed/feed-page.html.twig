{# templates/lucky/number.html.twig #}
<link href="{{ asset('css/main.css') }}" rel="stylesheet"/>
<script src="{{ asset('js/main.js') }}" type="text/javascript"></script>

{% block javascripts %}
	<script>
		window.onload = function () {
			setupClickListener();
		}
	</script>

{% endblock %}
<div id="container" onload="setupClickListener()" src="{{asset('js/main.js')}}">
	<div class="grid">
		{% for feed_item in feed_items %}
			<div id="card-{{loop.index}}" class="card">
				<div class="header">
					{{ feed_item.title }}
				</div>
				<div class="content">
					{{ feed_item.description }}
				</div>
				<div class="footer">
					<div class="pub-date-container">
						Published:
						{{ feed_item.pubDate|date("D, d M Y H:i:s") }}
					</div>
					<div class="button-container">
						<a class="hidden view-link-button" target="_blank" href={{feed_item.link}}>
							View Article
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
